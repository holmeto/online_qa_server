    <!--增加用户信息-->
    <insert id="addQuestionInfo" parameterType="com.junjia.model.QuestionInfoDO">
        insert into question_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="questionName != null">
                question_name,
            </if>
            <if test="questionContent != null">
                question_content,
            </if>
            <if test="questionType != null">
                question_type,
            </if>
            <if test="submitPersonId != null">
                submit_person_id,
            </if>
            <if test="submitPersonName != null">
                submit_person_name,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="modifyTime != null">
                modify_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <!--            <if test="id != null" >-->
            <!--                #{id,jdbcType=INTEGER},-->
            <!--            </if>-->
            <if test="questionName != null">
                #{questionName,jdbcType=VARCHAR},
            </if>
            <if test="questionContent != null">
                #{questionContent,jdbcType=VARCHAR},
            </if>
            <if test="questionType != null">
                #{questionType,jdbcType=VARCHAR},
            </if>
            <if test="submitPersonId != null">
                #{submitPersonId,jdbcType=INTEGER},
            </if>
            <if test="submitPersonName != null">
                #{submitPersonName,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=DATE},
            </if>
            <if test="modifyTime != null">
                #{modifyTime,jdbcType=DATE},
            </if>
        </trim>
    </insert>

    <!--根据id更改用户信息-->
    <update id="updateQuestionInfo" parameterType="com.junjia.model.QuestionInfoDO">
        update question_info
        <set>
            <if test="questionName != null">
                question_name = #{questionName,jdbcType=VARCHAR},
            </if>
            <if test="questionContent != null">
                question_content = #{questionContent,jdbcType=VARCHAR},
            </if>
            <if test="questionType != null">
                question_type = #{questionType,jdbcType=INTEGER},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime,jdbcType=DATE},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

