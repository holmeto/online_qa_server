        <result column="question_content" jdbcType="VARCHAR" property="questionContent"/>
        <result column="question_type" jdbcType="VARCHAR" property="questionType"/>
        <result column="submit_person_id" jdbcType="INTEGER" property="submitPersonId"/>
        <result column="submit_person_name" jdbcType="VARCHAR" property="submitPersonName"/>
        <result column="create_time" jdbcType="DATE" property="create_time"/>
        <result column="modify_time" jdbcType="DATE" property="modify_time"/>
    </resultMap>

    <!--查询问题信息-->
    <select id="getQuestionInfoById" resultType="com.junjia.model.QuestionInfoDO">
        select * from question_info where id = #{id}
    </select>

    <select id="getQuestionList" resultType="com.junjia.model.QuestionInfoDO">
        select * from question_info question_name like "%#{questionName}" order by create_time desc limit #{limit}, #{offset}
    </select>

    <select id="getQuestionCount" resultType="java.lang.Integer">
        select * from question_info question_name like "%#{questionName}"
